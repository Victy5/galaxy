

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: root.size
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text:  root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_btn_title
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ""
        background_color: 1, .3, .4, .90

    Label:
        text: root.parent.high_score
        font_size: dp(23)
        font_name: 'fonts/lcd.ttf'
        pos_hint: {"center_x": .5, "center_y": .10}