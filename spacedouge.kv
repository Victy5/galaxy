#: import menu menu

MainWidget:
#CountDownDisplay:

<CountDownDisplay@BoxLayout>:
    id: count_display
    canvas.before:
        Color:
            rgba: 0, 0, 0, self.opacity_value  # Use opacity_value to control transparency
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: str(root.countdown_time)
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        color: 1, 1, 1, self.parent.opacity_value
        center: self.parent.center

#:set s dp(10)
<MainWidget@RelativeLayout>:
    canvas.before:
        Rectangle:
            size: root.size

            source: "images/bg1.jpg"

    menu_widget: menu_widget
    perspective_point_x: self.width * 0.48
    perspective_point_y: self.height * 0.80

    Button:
        text: "||"
        font_size: dp(20)
        size_hint: .1, .1
        pos_hint: {"center_x": 0.9, "center_y": 0.9}
        background_normal: ""
        background_color: 0, 0, .7,  .10
        on_press: root.pause_game()


    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: .18, .18
        pos_hint: {"x": 0, "top": 1}



